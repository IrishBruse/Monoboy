<Project Sdk="Microsoft.NET.Sdk">
	<PropertyGroup>
		<TargetFramework>netcoreapp3.1</TargetFramework>
		<OutputType>WinExe</OutputType>
		<StartupObject>Monoboy.Program</StartupObject>
	</PropertyGroup>
	<ItemGroup>
	  <ProjectReference Include="..\Monoboy.Frontend\Monoboy.Frontend.csproj" />
	</ItemGroup>
	<Target Name="PostBuild" AfterTargets="PostBuildEvent">
	  <Exec Command="robocopy $(ProjectDir)Roms\ $(TargetDir)Roms\ /E" />
	</Target>
</Project>